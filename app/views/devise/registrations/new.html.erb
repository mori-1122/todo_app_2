<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "input-field" %>
  </div>

  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "input-field" %>
  </div>

  <div>
    <%= f.label :password_confirmation, "Password Confirmation" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
  </div>

  <div>
    <%= f.submit "Submit", class: "btn btn-submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
